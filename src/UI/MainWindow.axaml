<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Zenki.UI.MainWindow"
        Title="Zenki">
    <StackPanel>
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,*" Margin="4">
            <Label Grid.Row="0" Grid.Column="0" >File</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FilePath}" />

            <Label Grid.Row="1" Grid.Column="0">Query</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Query}"></TextBox>
        </Grid>
        <TextBlock Text="{Binding Found}"></TextBlock>
    </StackPanel>
</Window>
